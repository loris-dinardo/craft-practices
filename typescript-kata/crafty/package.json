{
  "name": "crafty",
  "version": "0.0.1",
  "author": "Loris Di Nardo Di Maio",
  "license": "MIT",
  "scripts": {
    "crafty": "node ./dist/index.js",
    "build": "tsc --noEmit ./src/index.ts && esbuild ./src/index.ts --bundle --platform=node --format=cjs --outdir=dist",
    "test": "jest --watchAll",
    "test:verbose": "jest --watchAll --verbose",
    "test:it": "jest --testRegex '.*\\.it\\.ts$'"
  },
  "bin": {
    "crafty": "./dist/index.js"
  },
  "dependencies": {
    "commander": "10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.0",
    "esbuild": "0.17.10",
    "jest": "29.4.3",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  }
}
